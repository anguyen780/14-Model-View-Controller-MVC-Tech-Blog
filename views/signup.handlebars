<div class="card">
  <div class="card-header bg-dark mt-3 text-white">
    <h2>Sign Up</h2>
  </div>
  <div id="signup" role="tabpanel">
    <form id="signup-form" class="card-body">
      <div>
        <label for="username-input-signup">Username</label>
        <input class="input-group mb-3" type="text" id="username-input-signup" />
      </div>
      <div>
        <label for="password-input-signup">Password</label>
        <input class="input-group mb-3" type="password" id="password-input-signup" />
      </div>
      <button type="submit" id="signup-btn" class="btn btn-dark btn-block" >Signup!</button>
      <a class="text-dark text-decoration-none mt-3" type="button" href="/login">Login instead</a>
    </form>
  </div>
</div>

<script src="/js/signup.js"></script>